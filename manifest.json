{
  "manifest_version": 3,
  "name": "MindGuard - Cyber Safety Companion",
  "version": "1.0",
  "description": "Detects scams, fake websites, and phishing links using an AI backend.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https.://mindguard-server.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:3000 https://mindguard-server.onrender.com;"
  }
}

